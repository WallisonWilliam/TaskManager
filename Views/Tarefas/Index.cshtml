@model IEnumerable<TaskManager.Models.Tarefa>

@{
    ViewData["Title"] = "Lista de Tarefas";
}

<h1>Lista de Tarefas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar nova tarefa</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data de Entrega</th>
            <th>Prioridade</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.DataEntrega.ToShortDateString()</td>
                <td>@item.Prioridade</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
